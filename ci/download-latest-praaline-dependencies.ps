# Download latest release of praaline-dependencies from GitHub
# Code adapted from MarkTiedemann/download-latest-release.ps1

$repo = "praaline/praaline-dependencies"
$file = "praaline_dependencies_win_$arch.zip"
$releases = "https://api.github.com/repos/$repo/releases"

Write-Host Determining latest release
$tag = (Invoke-WebRequest $releases | ConvertFrom-Json)[0].tag_name

$download = "https://github.com/$repo/releases/download/$tag/$file"
$name = $file.Split(".")[0]
$zip = "$name-$tag.zip"
$dir = "$name-$tag"

Write-Host Dowloading latest release of praaline-dependencies
Invoke-WebRequest $download -Out $zip

